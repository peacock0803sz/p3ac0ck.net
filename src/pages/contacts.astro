---
import "@fontsource/ibm-plex-sans-jp";

import ContactCard from "../components/ContactCard.astro";
import Header from "../components/Header.astro";
import { SiteName } from "../constants";

const title = "My Contacts / 連絡先";
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image" href="/favicon.jpg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={Astro.props.description || ""} />
    <title>{title} - {SiteName}</title>
  </head>
  <body>
    <main class="max-w-8xl px-10 text-slate-900 bg-slate-100">
      <Header name={SiteName} />
      <div class="mt-5 mb-10">
        <h1 class="font-semibold text-3xl">{title}</h1>
        <div
          class="my-5 grid grid-flow-dense gap-4 auto-rows-max default:grid-cols-2 sm:grid-cols-1 lg:grid-cols-2 xl:grid-cols-3"
        >
          <ContactCard
            name="Email"
            id="me@p3ac0ck.net"
            url="mailto:me@p3ac0ck.net"
          />
          <ContactCard
            name="Twitter (X)"
            id="@peacock0803sz"
            url="https://x.com/peacock0803sz/"
          />
          <ContactCard
            name="GitHub"
            id="peacock0803sz"
            url="https://github.com/peacock0803sz"
          />
          <ContactCard
            name="Facebook"
            id="peacock0803sz"
            url="https://www.facebook.com/peacock0803sz"
          />
          <ContactCard
            name="Zenn"
            id="peacock0803sz"
            url="https://zenn.dev/peacock0803sz"
          />
          <ContactCard
            name="Mastodon"
            id="peacock@mtd.pythonasia.org"
            url="https://mtd.pythonasia.org/@peacock"
          />
          <ContactCard
            name="Instagram"
            id="peacock0803sz"
            url="https://www.instagram.com/peacock0803sz"
          />
          <ContactCard
            name="Flickr"
            id="peacock0803sz"
            url="https://flickr.com/people/peacock0803sz"
          />
          <ContactCard
            name="Discord"
            id="peacock0803sz"
            url="https://discordapp.com/users/422346347019108355"
          />
        </div>
      </div>
    </main>
  </body>
</html>

<style is:global>
  @font-face {
    font-family: "IBM Plex Sans JP", sans-serif;
  }
  :root {
    @apply bg-slate-100;
  }
  a {
    @apply underline;
    color: #44e;
  }
  @media print {
    :root {
      @apply bg-white;
    }
    div.header,
    div.footer {
      display: none;
    }
  }
</style>
