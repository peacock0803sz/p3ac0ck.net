---
import "@fontsource/ibm-plex-sans-jp";

import Header from "../components/Header.astro";
import { SiteName } from "../constants";
import Footer from "../components/Footer.astro";

const { title, head, lang } = Astro.props;
---

<html lang={lang || "ja"}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image" href="/favicon.jpg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={Astro.props.description || ""} />
    <title>{title} - {SiteName}</title>
  </head>
  <body>
    <main class="max-w-8xl px-10 text-gray-950 bg-gray-50">
      <Header name={head || SiteName} />
      <div class="mt-5 mb-10">
        <slot />
      </div>
      <Footer />
    </main>
  </body>
</html>

<style is:global>
  @font-face {
    font-family: "IBM Plex Sans JP", sans-serif;
  }
  a {
    color: #44e;
    text-decoration-line: underline;
  }
  @media print {
    :root {
      background-color: white;
    }
    div.header,
    div.footer {
      display: none;
    }
  }
</style>
