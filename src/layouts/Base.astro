---
import "@fontsource/ibm-plex-sans-jp";

import Header from "../components/Header.astro";
import { SiteName } from "../constants";
import Footer from "../components/Footer.astro";

const { title, head, lang } = Astro.props;
---

<html lang={lang || "ja"}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image" href="/favicon.jpg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={Astro.props.description || ""} />

    <meta property="og:title" content={title}/>
    <meta property="og:description" content={Astro.props.description || ""} />
    <meta property="og:image" content={Astro.props.ogImage || ""} />
    <meta property="og:url" content={Astro.props.url || ""} />

    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content={import.meta.env.SITE || ""} />
    <meta property="twitter:url" content={Astro.props.url || ""} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={Astro.props.description || ""} />
    <meta name="twitter:image" content={Astro.props.ogImage || ""} />
    <title>{title} - {SiteName}</title>
  </head>
  <body>
    <main class="max-w-8xl px-10">
      <Header name={head || SiteName} />
      <div class="mt-5 mb-10">
        <slot />
      </div>
      <Footer />
    </main>
  </body>
</html>

<style is:global>
  @font-face {
    font-family: "IBM Plex Sans JP", sans-serif;
  }
  :root {
    @apply bg-slate-100;
  }
  a {
    @apply underline;
    color: #44e;
  }
  @media print {
    :root {
      @apply bg-white;
    }
    div.header,
    div.footer {
      display: none;
    }
  }
</style>
